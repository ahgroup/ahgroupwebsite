  keywords = {Cell Culture Techniques, Humans, Influenza A virus/pathogenicity/*physiology, Influenza, Human/epidemiology/*transmission, Models, Biological, Models, Theoretical, Virus Replication},
  language = {eng},
  pmcid    = {PMC3317582},
